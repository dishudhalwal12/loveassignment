rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to write to orders collection (for payment submissions)
    match /orders/{orderId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
    
    // Allow anyone to write to orders_whatsapp collection (for WhatsApp checkout)
    match /orders_whatsapp/{orderId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
